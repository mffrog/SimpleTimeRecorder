<UserControl x:Class="SimpleTimeRecorder.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleTimeRecorder"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="80"
             MouseDown="Click">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="Check" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
        <TextBlock x:Name="TagName" Text="Tag" Grid.Column="1" VerticalAlignment="Center" Margin="5,5,5,5" Foreground="White"></TextBlock>
    </Grid>
</UserControl>
